{
	"name": "binary_input",
	"properties": {
		"linkedServiceName": {
			"referenceName": "Gen2_Domain_ADLS",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"FileName": {
				"type": "string"
			},
			"ContainerName": {
				"type": "string"
			}
		},
		"folder": {
			"name": "poc"
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().FileName",
					"type": "Expression"
				},
				"fileSystem": {
					"value": "@{concat('dataset().ContainerName/prod/data', '/year=',formatDateTime(addDays(utcNow(),-1),'yyyy'), '/month=',formatDateTime(addDays(utcNow(),-1),'MM'),'/day=',formatDateTime(addDays(utcNow(),-1),'dd'),'/')}",
					"type": "Expression"
				}
			},
			"compression": {
				"type": "ZipDeflate",
				"level": "Fastest"
			}
		}
	}
}