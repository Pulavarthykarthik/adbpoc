{
	"name": "ErrorRowsHandleDataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "salesindiadataset",
						"type": "DatasetReference"
					},
					"name": "SalesIndia"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "tbl_salesdataset",
						"type": "DatasetReference"
					},
					"name": "sink2"
				},
				{
					"dataset": {
						"referenceName": "AzureSqlTablebadtables",
						"type": "DatasetReference"
					},
					"name": "sink3"
				}
			],
			"transformations": [
				{
					"name": "conditionalsplit1"
				},
				{
					"name": "filenamecolumnforerrorrows"
				},
				{
					"name": "filenamecolforgoodrows"
				}
			],
			"scriptLines": [
				"source(output(",
				"          saleDate as string,",
				"          salesItem as string,",
				"          country as string,",
				"          quantity as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SalesIndia",
				"SalesIndia split(isNull(toDate(saleDate, 'dd-MMM-yy')),",
				"     disjoint: false) ~> conditionalsplit1@(ErrorRows, GoodRows)",
				"conditionalsplit1@ErrorRows derive(salesfilename = 'indiasalesbad.csv') ~> filenamecolumnforerrorrows",
				"conditionalsplit1@GoodRows derive(salesfilename = 'indiasalegood.csv',",
				"          saleDate = toDate(saleDate, 'dd-mmm-yy'),",
				"          quantity = toInteger(quantity)) ~> filenamecolforgoodrows",
				"filenamecolforgoodrows sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          saleDate as date,",
				"          salesItem as string,",
				"          country as string,",
				"          quantity as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          saleDate,",
				"          salesItem,",
				"          country,",
				"          quantity",
				"     )) ~> sink2",
				"filenamecolumnforerrorrows sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          saleDate as string,",
				"          salesItem as string,",
				"          country as string,",
				"          quantity as string,",
				"          salesfilename as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          saleDate,",
				"          salesItem,",
				"          country,",
				"          quantity,",
				"          salesfilename",
				"     )) ~> sink3"
			]
		}
	}
}